<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iscool.edward.stockmarkettwitter" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/stockup"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/stockup"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:windowSoftInputMode="adjustPan" android:name=".ArticleActivity"/>
        <activity android:name=".ArticleScoreActivity"/>
        <activity android:name=".QuizActivity"/>
        <activity android:name=".ChartActivity"/>
        <activity android:name=".AssetActivity"/>
        <activity android:name=".CompanyActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>